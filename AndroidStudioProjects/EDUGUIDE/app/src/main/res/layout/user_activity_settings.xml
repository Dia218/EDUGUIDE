<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 로고 이미지 -->
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="102dp"
        android:layout_height="67dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/user_logo"
        android:contentDescription="@string/logo_description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/logo_image">

        <TextView
            android:id="@+id/profile_edit"
            android:layout_marginStart="30dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/text_color"
            android:text="@string/edit_profile" />

        <View
            android:layout_marginStart="30dp"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/personalinfo_edit"
            android:layout_marginStart="30dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/text_color"
            android:text="@string/edit_personinfo" />

        <View
            android:layout_marginStart="30dp"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/inquiry_edit"
            android:layout_marginStart="30dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/text_color"
            android:text="@string/edit_inquiry" />

        <View
            android:layout_marginStart="30dp"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/notice_edit"
            android:layout_marginStart="30dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/text_color"
            android:text="@string/edit_notice" />


        <View
            android:layout_marginStart="30dp"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/logout_edit"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/text_color"
            android:text="@string/edit_logout"
            tools:ignore="VisualLintButtonSize" />
    </LinearLayout>


</RelativeLayout>